{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AUTHORS_DB",
  "description": "Schema for the authors database.",
  "type": "array",
  "items": {
    "type": "object",
    "additionalProperties": false,
    "properties": {
      "name": {
        "type": "string",
        "description": "Author name."
      },
      "alias": {
        "type": [
          "string",
          "null"
        ],
        "description": "Known aliases or pseudonyms."
      },
      "birth_year": {
        "type": [
          "integer",
          "null"
        ],
        "description": "Birth year (approximate if unknown; use negative for BC)."
      },
      "death_year": {
        "type": [
          "integer",
          "null"
        ],
        "description": "Death year (null if unknown or living; use negative for BC)."
      },
      "country": {
        "type": [
          "string",
          "null"
        ],
        "description": "Country of origin (ISO 3166-1 alpha-2, uppercase).",
        "pattern": "^[A-Z]{2}$",
        "examples": [
          "ES",
          "FR",
          "US",
          "GB",
          "DE"
        ]
      },
      "url_wikipedia": {
        "type": [
          "string",
          "null"
        ],
        "description": "English Wikipedia URL for the author, if available.",
        "format": "uri"
      },
      "url_photo": {
        "type": [
          "string",
          "null"
        ],
        "description": "URL to an author photo (ideally from Wikipedia), if available.",
        "format": "uri"
      },
      "importance": {
        "type": [
          "integer",
          "null"
        ],
        "description": "Importance or impact from 1 to 5. Scale: 1=minor; 2=secondary/regional; 3=notable/representative; 4=major within a tradition or period; 5=canonical or foundational (high priority).",
        "minimum": 1,
        "maximum": 5
      }
    },
    "required": [
      "name"
    ]
  }
}
